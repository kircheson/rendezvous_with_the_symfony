{% extends 'base.html.twig' %}

{% block body %}
    <h1>Список задач</h1>

    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Описание</th>
            <th>Пользователь</th>
            <th>Дата создания</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td>{{ task.id }}</td>
                <td>{{ task.title }}</td>
                <td>{{ task.description }}</td>
                <td>{{ task.email }}</td>
                <td>{{ task.createdAt|date('Y-m-d H:i:s') }}</td>
                <td><a href="{{ path('task_edit', {'id': task.id}) }}">Редактировать</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}